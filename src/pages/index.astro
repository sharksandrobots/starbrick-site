---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';

// Read the content from markdown file
const content = await Astro.glob('../content/home.md');
const homeContent = content[0];
---

<Layout title="Starbrick Studio">
  <main class="homepage">
    <!-- Contact link in top right -->
    <a href="mailto:mike@starbrick.studio" class="contact-link">Contact</a>
    
    <!-- Main grid content -->
    <div class="homepage-grid">
      <!-- Bold statement - columns 1-2 -->
      <div class="statement-section">
        <div class="statement-content">
          <h2 class="studio-name">Starbrick Studio</h2>
          <h1 class="statement">{homeContent.frontmatter.boldStatement}</h1>
        </div>
      </div>
      
      <!-- Description - columns 3-4 -->
      <div class="description-section">
        <div class="description-content" set:html={homeContent.compiledContent()} />
      </div>
      
      <!-- Empty column 5 for spacing -->
      <div class="spacer-section"></div>
    </div>
  </main>
</Layout>

<style>
  /* Reset everything to eliminate browser defaults */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    background-color: white !important;
  }

  /* Force white background on everything that might show gray */
  html {
    background-color: white !important;
  }

  body {
    background-color: white !important;
  }

  .homepage {
    width: 100vw;
    height: 100vh;
    position: relative;
    margin: 0;
    padding: 0;
  }

  .contact-link {
    position: absolute;
    top: var(--space-4);
    right: var(--space-4);
    z-index: 10;
    color: var(--colors-text-primary);
    text-decoration: underline;
    font-size: var(--fs-base);
    transition: color 0.2s ease;
  }

  .contact-link:hover {
    color: var(--colors-interaction-hovered);
    text-decoration: none;
  }

  .homepage-grid {
    display: grid;
    grid-template-columns: 2fr 2fr 1fr;
    height: 100vh;
    width: 100vw;
    margin: 0;
    padding: 0;
  }

  .statement-section {
    background-color: var(--color-starbrickyellow-bold);
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    margin: 0;
    padding: 0;
  }

  .statement-content {
    padding-left: var(--space-8);
    padding-right: var(--space-8);
    padding-top: var(--space-8);
    width: 100%;
    text-align: left;
  }

  .studio-name {
    font-size: var(--fs-md);
    font-weight: 700;
    color: var(--color-black);
    margin: 0 0 var(--space-2) 0;
    text-align: left;
  }

  .statement {
    font-size: var(--fs-2xl);
    font-weight: 700;
    line-height: 1.1;
    color: var(--color-black);
    margin: 0;
    text-align: left;
  }

  .description-section {
    background-color: var(--colors-surface-neutral);
    display: flex;
    align-items: flex-start;
    padding-left: var(--space-8);
    padding-right: var(--space-8);
    padding-top: var(--space-8);
    margin: 0;
  }

  .description-content {
    font-size: var(--fs-md);
    line-height: 1.6;
    color: var(--colors-text-primary);
  }

  .description-content p {
    margin-bottom: var(--space-4);
  }

  .description-content p:last-child {
    margin-bottom: 0;
  }

  .spacer-section {
    background-color: var(--colors-surface-neutral);
    margin: 0;
    padding: 0;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    html, body {
      background-color: white !important;
      height: 100%;
      min-height: 100vh;
    }

    .homepage {
      min-height: 100vh;
      background-color: white !important;
    }

    .homepage-grid {
      grid-template-columns: 1fr;
      grid-template-rows: 50vh 50vh;
      min-height: 100vh;
      height: 100vh;
      background-color: white !important;
    }

    .statement-section {
      height: 50vh;
      min-height: 50vh;
    }

    .description-section {
      height: 50vh;
      min-height: 50vh;
      background-color: white !important;
    }

    .spacer-section {
      display: none;
    }

    .statement {
      font-size: var(--fs-2xl);
    }

    .statement-content {
      padding-left: var(--space-6);
      padding-right: var(--space-6);
      padding-top: var(--space-6);
    }

    .description-section {
      padding-left: var(--space-6);
      padding-right: var(--space-6);
      padding-top: var(--space-6);
      padding-bottom: var(--space-6);
    }

    .description-content {
      font-size: var(--fs-base);
    }

    .contact-link {
      top: var(--space-3);
      right: var(--space-3);
    }
  }
</style>